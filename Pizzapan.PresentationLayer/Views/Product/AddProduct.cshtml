@model Pizzapan.PresentationLayer.Models.ImageFileViewModel
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün Ekleme Sayfası</h1>

<form method="post" enctype="multipart/form-data">
    <label>Ürün Adı</label>
    <input type="text" asp-for="Name" class="form-control" style="background-color : #dedee5" />
    <br />
    <label>Kategori Adı</label>
    <input type="text" asp-for="CategoryID" class="form-control" style="background-color : #dedee5" />
    <br />
    <label>Ürün Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" style="background-color : #dedee5" />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" style="background-color : #dedee5" />
    <br />
    <label>Resim</label>
    <input type="file" asp-for="Image" class="form-control" style="background-color : #dedee5" />
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>
