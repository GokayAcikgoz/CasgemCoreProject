@model List<Pizzapan.EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<table class ="table table-bordered">
    <tr>
        <td>#</td>
        <td>Kategori Adı</td>
        <td>Kategori Ürünleri</td>
        <td>Sitede Gör</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-outline-info">Kategori Ürünleri</a></td>
            <td><a href="#" class="btn btn-outline-warning">Sitede Gör</a></td>
            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Girişi</a>
